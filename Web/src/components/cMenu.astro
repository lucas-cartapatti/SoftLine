---
export const partial = true;

interface Props{
    _name : string;
    _actions : string[];
}

const { _name, _actions} = Astro.props;
---

<div class="menu-card">
    <h1>{_name}</h1>

    <ul>
        {_actions.map(x => (
            <li>
                <a href={`../${_name}/${x}`}>
                    {x} {_name}
                </a>
            </li>
        ))}
    </ul>
</div>

<style scoped>
	.menu-card{
		margin: 1rem;
		background: linear-gradient(15deg,var(--black),var(--gray));
		height: max-content;
		min-width: 350px;
		padding: 1rem;
		border: 4px solid var(--white);
		border-radius: 12px;
		display: flex;
		flex-direction: column;
		justify-content: space-around;
	}

	.menu-card h1{
		font-size: 50px;
		font-weight: bold;
	}

	.menu-card a{
		font-size: var(--big);
	}
	.menu-card * {
		font-family: monospace;
		color: var(--white);
	}
</style>